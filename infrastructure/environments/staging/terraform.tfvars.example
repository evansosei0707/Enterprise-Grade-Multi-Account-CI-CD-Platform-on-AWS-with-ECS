#------------------------------------------------------------------------------
# Staging Environment - Terraform Variables Example
#------------------------------------------------------------------------------

aws_region   = "us-east-1"
project_name = "ecs-fargate-cicd"
environment  = "staging"

tooling_account_id = "472294262990"
staging_account_id = "956574163435"

deploy_role_arn = "arn:aws:iam::956574163435:role/staging-ci-deploy-role"

# Network Configuration (from Day-0 StackSet)
vpc_id = "vpc-xxxxxxxxx"
public_subnet_ids = [
  "subnet-xxxxxxxxx",
  "subnet-yyyyyyyyy"
]
private_subnet_ids = [
  "subnet-aaaaaaaaaa",
  "subnet-bbbbbbbbbb"
]
alb_security_group_id = "sg-xxxxxxxxx"

# ECR Configuration
ecr_repository_url = "472294262990.dkr.ecr.us-east-1.amazonaws.com/ecs-fargate-cicd-inventory-api"
image_tag          = "latest"

# ECS Configuration
container_port = 8080
task_cpu       = 256
task_memory    = 512
desired_count  = 2

# Staging Settings
log_retention_days = 14
enable_autoscaling = true
min_capacity       = 1
max_capacity       = 4
