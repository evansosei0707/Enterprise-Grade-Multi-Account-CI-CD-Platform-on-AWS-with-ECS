#------------------------------------------------------------------------------
# Dev Environment - Terraform Variables Example
# Copy this to terraform.tfvars and fill in values from Day-0 StackSet
#------------------------------------------------------------------------------

# AWS Region
aws_region = "us-east-1"

# Project Configuration
project_name = "ecs-fargate-cicd"
environment  = "dev"

# Account IDs
tooling_account_id = "472294262990"
dev_account_id     = "067847734974"

# Deploy Role (from Day-0 StackSet)
deploy_role_arn = "arn:aws:iam::067847734974:role/dev-ci-deploy-role"

# Network Configuration (from Day-0 StackSet outputs)
# Replace these with actual values from CloudFormation Stack outputs
vpc_id = "vpc-xxxxxxxxx"
public_subnet_ids = [
  "subnet-xxxxxxxxx",
  "subnet-yyyyyyyyy"
]
private_subnet_ids = [
  "subnet-aaaaaaaaaa",
  "subnet-bbbbbbbbbb"
]
alb_security_group_id = "sg-xxxxxxxxx"

# ECR Configuration
ecr_repository_url = "472294262990.dkr.ecr.us-east-1.amazonaws.com/ecs-fargate-cicd-inventory-api"
image_tag          = "latest"

# ECS Configuration
container_port = 8080
task_cpu       = 256
task_memory    = 512
desired_count  = 1

# Environment-Specific Settings (Dev)
log_retention_days = 7
enable_autoscaling = false
min_capacity       = 1
max_capacity       = 2
